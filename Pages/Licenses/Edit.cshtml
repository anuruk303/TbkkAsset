@page
@model tbkk_AC.Pages.Licenses.EditModel

@{
    ViewData["Title"] = "Edit";
}
    <div id="content-wrapper">
        <div class="container-fluid">
            <!-- Breadcrumbs-->
            <ol class="breadcrumb">
                <li class="breadcrumb-item active">Asset Control</li>
                <li class="breadcrumb-item active">Managment</li>
                <li class="breadcrumb-item active">License</li>
            </ol>
            <div class="card ">
                <div class="card-header">
                    Create
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col">
                            <form method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="License.LicenseID" />
                                <div class="form-group row">
                                    <label asp-for="License.LicenseName" class="col-sm-3 col-form-label"></label>
                                    <div class="col-sm-8">
                                        <input asp-for="License.LicenseName" class="form-control" />
                                        <span asp-validation-for="License.LicenseName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label asp-for="License.SoftewareName" class="col-sm-3 col-form-label"></label>
                                    <div class="col-sm-8">
                                        <input asp-for="License.SoftewareName" class="form-control" />
                                        <span asp-validation-for="License.SoftewareName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label asp-for="License.PurchaseDate" class="col-sm-3 col-form-label"></label>
                                    <div class="col-sm-8">
                                        <input asp-for="License.PurchaseDate" class="form-control" />
                                        <span asp-validation-for="License.PurchaseDate" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label asp-for="License.StartDate" class="col-sm-3 col-form-label"></label>
                                    <div class="col-sm-8">
                                        <input asp-for="License.StartDate" class="form-control" />
                                        <span asp-validation-for="License.StartDate" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label asp-for="License.ExpireDate" class="col-sm-3 col-form-label"></label>
                                    <div class="col-sm-8">
                                        <input asp-for="License.ExpireDate" class="form-control" />
                                        <span asp-validation-for="License.ExpireDate" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label asp-for="License.PONumber" class="col-sm-3 col-form-label"></label>
                                    <div class="col-sm-8">
                                        <input asp-for="License.PONumber" class="form-control" />
                                        <span asp-validation-for="License.PONumber" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label asp-for="License.Attachfiles" class="col-sm-3 col-form-label"></label>
                                    <div class="col-sm-8">
                                        <input asp-for="License.Attachfiles" class="form-control" />
                                        <span asp-validation-for="License.Attachfiles" class="text-danger"></span>
                                    </div>
                                </div>


                                <div class="form-group row">
                                    <label asp-for="License.Status" class="col-sm-3 col-form-label"></label>
                                    <div class="col-sm-8">
                                        <input asp-for="License.Status" class="form-control" value="Using" readonly />
                                        <span asp-validation-for="License.Status" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label asp-for="License.Model_ModelID" class="col-sm-3 col-form-label">Model</label>
                                    <div class="col-sm-8">
                                        <select asp-for="License.Model_ModelID" class="form-control">
                                            <option selected value=@null>Plase select</option>
                                            @foreach (var item in Model.Model)
                                            {
                                                if (item.Status.Equals("Using"))
                                                {
                                                    <option value=@item.ModelID>@Html.DisplayFor(modelItem => item.ModelName)</option>
                                                }
                                            }
                                        </select>
                                        <span asp-validation-for="License.Model_ModelID" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label asp-for="License.Supplier_SupplierID" class="col-sm-3 col-form-label">Department</label>
                                    <div class="col-sm-8">
                                        <select asp-for="License.Supplier_SupplierID" class="form-control">
                                            <option selected value=@null>Plase select</option>
                                            @foreach (var item in Model.Supplier)
                                            {
                                                if (item.Status.Equals("Using"))
                                                {
                                                    <option value=@item.SupplierID>@Html.DisplayFor(modelItem => item.SupplierName)</option>
                                                }
                                            }
                                        </select>
                                        <span asp-validation-for="License.Supplier_SupplierID" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label asp-for="License.Department_DepartmentID" class="col-sm-3 col-form-label">Department</label>
                                    <div class="col-sm-8">
                                        <select asp-for="License.Department_DepartmentID" class="form-control">
                                            <option selected value=@null>Plase select</option>
                                            @foreach (var item in Model.Department)
                                            {
                                                if (item.Status.Equals("Using"))
                                                {
                                                    <option value=@item.DepartmentID>@Html.DisplayFor(modelItem => item.DepartmentName)</option>
                                                }
                                            }
                                        </select>
                                        <span asp-validation-for="License.Department_DepartmentID" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label asp-for="License.Company_CompanyID" class="col-sm-3 col-form-label">Company</label>
                                    <div class="col-sm-8">
                                        <select asp-for="License.Company_CompanyID" class="form-control">
                                            <option selected value=@null>Plase select</option>
                                            @foreach (var item in Model.Company)
                                            {
                                                if (item.Status.Equals("Using"))
                                                {
                                                    <option value=@item.CompanyID>@Html.DisplayFor(modelItem => item.CompanyName)</option>
                                                }
                                            }
                                        </select>
                                        <span asp-validation-for="License.Company_CompanyID" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label asp-for="License.Note" class="col-sm-3 col-form-label"></label>
                                    <div class="col-sm-8">
                                        <textarea rows="4" cols="15" asp-for="License.Note" class="form-control"></textarea>
                                        <span asp-validation-for="License.Note" class="text-danger"></span>
                                    </div>
                                </div>


                                <div class="form-group row" style="float:right; margin-right:9%">
                                    <a asp-page="./Index"><button type="button" class="btn btn-link">Back to List</button></a>
                                    <input style="margin-left:10px" type="submit" value="Save" class="btn btn-outline-dark" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

