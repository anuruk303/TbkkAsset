@model tbkk_AC.Pages.Licenses.DetailsModel

@{
    ViewData["Title"] = "Details";
}
<div class="container">
    <div class="row">
        <div class="col-md-9">
            <h2>License Detail</h2>
            <div class=" col-md-12 col-lg-12 ">
                <div class="card " style="margin-top:1%">
                    <div class="card-header" style="font-weight:bold;color:darkblue;">
                        Detail
                    </div>
                    <div class="card-body">
                        <table class="table table-user-information" style="margin-top:-24%">
                            <tbody>
                                <tr>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col">
                                                <td>@Html.DisplayNameFor(model => model.License.LicenseName) :</td>
                                                <td> @Html.DisplayFor(model => model.License.LicenseName)</td>
                                            </div>
                                            <div class="col">
                                                <td>@Html.DisplayNameFor(model => model.License.SoftewareName) :</td>
                                                <td>@Html.DisplayFor(model => model.License.SoftewareName)</td>
                                            </div>
                                        </div>
                                    </div>
                                </tr>
                                <tr>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col">
                                                <td>@Html.DisplayNameFor(model => model.License.Attachfiles) :</td>
                                                <td> @Html.DisplayFor(model => model.License.Attachfiles)</td>
                                            </div>
                                            <div class="col">
                                                <td>@Html.DisplayNameFor(model => model.License.PONumber) :</td>
                                                <td>@Html.DisplayFor(model => model.License.PONumber)</td>

                                            </div>
                                        </div>
                                    </div>
                                </tr>
                                <tr>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col">
                                                <td>@Html.DisplayNameFor(model => model.License.LicenseID) :</td>
                                                <td>@Html.DisplayFor(model => model.License.LicenseID)</td>
                                            </div>
                                            <div class="col">
                                                <td></td>
                                                <td></td>
                                            </div>
                                        </div>
                                    </div>
                                </tr>
                                <tr>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col">
                                                <td></td>
                                                <td></td>

                                            </div>
                                            <div class="col">
                                                <td></td>
                                                <td></td>
                                            </div>
                                        </div>
                                    </div>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="card " style="margin-top:-4%">
                    <div class="card-header" style="font-weight:bold;color:darkblue;">
                        Model
                    </div>
                    <div class="card-body">
                        <table class="table table-user-information" style="margin-top:-16%;margin-bottom:2%">
                            <tbody>
                                <tr>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col">
                                                <td>Supplier :</td>
                                                <td>
                                                    @foreach (var item in Model.Supplier)
                                                    {
                                                        if (Model.License.Supplier_SupplierID == item.SupplierID)
                                                        {
                                                            @Html.DisplayFor(modelItem => item.SupplierName)
                                                        }
                                                    }
                                                </td>
                                            </div>
                                            <div class="col">
                                                <td>Company :</td>
                                                <td>
                                                    @foreach (var item in Model.Company)
                                                    {
                                                        if (Model.License.Company_CompanyID == item.CompanyID)
                                                        {
                                                            @Html.DisplayFor(modelItem => item.CompanyName)
                                                        }
                                                    }
                                                </td>
                                            </div>
                                        </div>
                                    </div>
                                </tr>
                                <tr>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col">
                                                <td>Department :</td>
                                                <td>
                                                    @foreach (var item in Model.Department)
                                                    {
                                                        if (Model.License.Department_DepartmentID == item.DepartmentID)
                                                        {
                                                            @Html.DisplayFor(modelItem => item.DepartmentName)
                                                        }
                                                    }
                                                </td>
                                            </div>
                                            <div class="col">
                                                <td></td>
                                                <td></td>
                                            </div>
                                        </div>
                                    </div>
                                </tr>
                                <tr>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col">
                                                <td></td>
                                                <td></td>

                                            </div>
                                            <div class="col">
                                                <td></td>
                                                <td></td>
                                            </div>
                                        </div>
                                    </div>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="card " style="margin-top:-4%">
                    <div class="card-header" style="font-weight:bold;color:darkblue;">
                        Date
                    </div>
                    <div class="card-body">
                        <table class="table table-user-information" style="margin-top:-16%;margin-bottom:-3%">
                            <tbody>
                                <tr>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col">
                                                <td>@Html.DisplayNameFor(model => model.License.StartDate) :</td>
                                                <td>@Html.DisplayFor(model => model.License.StartDate)</td>

                                            </div>
                                            <div class="col">
                                                <td>@Html.DisplayNameFor(model => model.License.PurchaseDate) :</td>
                                                <td>@Html.DisplayFor(model => model.License.PurchaseDate)</td>

                                            </div>
                                        </div>
                                    </div>
                                </tr>
                                <tr>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col">
                                                <td>@Html.DisplayNameFor(model => model.License.ExpireDate) :</td>
                                                <td>@Html.DisplayFor(model => model.License.ExpireDate)</td>

                                            </div>
                                            <div class="col">
                                                <td></td>
                                                <td></td>
                                            </div>
                                        </div>
                                    </div>
                                </tr>
                                <tr>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col">
                                                <td></td>
                                                <td></td>

                                            </div>
                                            <div class="col">
                                                <td></td>
                                                <td></td>
                                            </div>
                                        </div>
                                    </div>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card " style="margin-top:-0%">
                    <div class="card-header" style="font-weight:bold;color:darkblue;">
                        More
                    </div>
                    <div class="card-body">
                        <table class="table table-user-information" style="margin-top:-12%;margin-bottom:-3%">
                            <tbody>
                                <tr>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col">
                                                <td>@Html.DisplayNameFor(model => model.License.Status) :</td>
                                                <td>@Html.DisplayFor(model => model.License.Status)</td>
                                            </div>
                                            <div class="col">
                                                <td>@Html.DisplayNameFor(model => model.License.Note) :</td>
                                                <td>
                                                    <div class="form-group">
                                                        <textarea class="form-control" id="exampleFormControlTextarea3" rows="5" cols='20'>@Html.DisplayFor(model => model.License.Note)</textarea>
                                                    </div>
                                                </td>

                                            </div>
                                        </div>
                                    </div>
                                </tr>
                                <tr>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col">
                                                <td></td>
                                                <td></td>

                                            </div>
                                            <div class="col">
                                                <td></td>
                                                <td></td>
                                            </div>
                                        </div>
                                    </div>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div>
        <a asp-page="./Edit" asp-route-id="@Model.License.LicenseID">Edit</a> |
        <a asp-page="./Index">Back to List</a>
    </div>
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Join</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">History Update</a>
        </li>
    </ul>
    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="3">
                        <thead>
                            <tr>
                                <th>
                                    LicenseName
                                </th>
                                <th>
                                    AssetName
                                </th>

                                <th>
                                    Status
                                </th>
                                <th>
                                    Asset
                                </th>
                                <th>
                                    Edit
                                </th>
                                <th>
                                    Delete
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Join_License_Asset)
                            {
                                if (Model.License.LicenseID == item.License_LicenseID)
                                {
                            <tr>
                                <td>
                                    @Html.DisplayFor(model => model.License.LicenseName)
                                </td>
                                <td>
                                    @foreach (var item1 in Model.Asset)
                                    {
                                        if (item.Asset_AssetID == item1.AssetID)
                                        {
                                            @Html.DisplayFor(modelItem => item1.AssetName)
                                }
                            }
                                </td>
                                <td>
                                    @Html.DisplayFor(model => item.Status)
                                </td>
                                <td width="100px">
                                    <a asp-page="../Assets/Details" asp-route-id="@item.Asset_AssetID">Details</a>
                                </td>
                                <td width="100px">
                                    <a asp-page="../JoinLicense_Assets/Edit" asp-route-id="@item.JoinLiAsID">Edit</a>
                                </td>
                                <td width="100px">
                                    <a asp-page="../JoinLicense_Assets/Delete" asp-route-id="@item.JoinLiAsID">Delete</a>
                                </td>
                            </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">

        </div>
    </div>