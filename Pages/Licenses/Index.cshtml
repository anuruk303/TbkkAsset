@page
@model tbkk_AC.Pages.Licenses.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div id="content-wrapper">
    <div class="container-fluid">
        <!-- Breadcrumbs-->
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="index.html">Asset Control</a>
            </li>
            <li class="breadcrumb-item active">Managment</li>
            <li class="breadcrumb-item active">License</li>
        </ol>
        <!-- DataTables Example -->

        <div class="card mb-3">
            <div class="card-header">
                <div class="dataTable_length">
                    <i class="fas fa-table">License</i>
                    <div style="float: right">
                        <a asp-page="Create"><button type="button" class="btn btn-primary">Create</button></a>

                        <button type="button" class="btn btn-info">Import data</button>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="3">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.License[0].LicenseName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.License[0].SoftewareName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.License[0].ExpireDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.License[0].PONumber)
                                </th>
                                <th>
                                    Model
                                </th>
                                <th>
                                    Supplier
                                </th>
                                <th>
                                    Department
                                </th>
                                <th>
                                    Company
                                </th>
                                <th>
                                    Edit
                                </th>
                                <th>
                                    Details
                                </th>
                                <th>
                                    Delete
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.License)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LicenseName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SoftewareName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ExpireDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PONumber)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Model_ModelID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Supplier_SupplierID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Department_DepartmentID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Company_CompanyID)
                                    </td>
                                    <td width="5%">
                                        <a asp-page="./Edit" asp-route-id="@item.LicenseID">
                                            <button type="button" class="btn btn-secondary btn-block catgs-modal" data-toggle="modal" data-target="#editCatgsModal"
                                                    asp-route-id="@item.LicenseID">
                                                Edit
                                            </button>
                                        </a>
                                    </td>
                                    <td width="5%">
                                        <a asp-page="./Details" asp-route-id="@item.LicenseID">
                                            <button type="button" class="btn btn-secondary btn-block catgs-modal" data-toggle="modal" data-target="#editCatgsModal">
                                                Details
                                            </button>
                                        </a>
                                    </td>
                                    <td width="5%">
                                        <a asp-page="./Delete" asp-route-id="@item.LicenseID">
                                            <button type="button" class="btn btn-secondary btn-block catgs-modal" data-toggle="modal" data-target="#editCatgsModal">
                                                Delete
                                            </button>
                                        </a>
                                    </td>
                                </tr>
                            }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
