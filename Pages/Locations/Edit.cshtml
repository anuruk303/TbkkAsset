@page
@model tbkk_AC.Pages.Locations.EditModel

@{
    ViewData["Title"] = "Edit";
}
    <div id="content-wrapper">
        <div class="container-fluid">
            <!-- Breadcrumbs-->
            <ol class="breadcrumb">
                <li class="breadcrumb-item active">Asset Control</li>
                <li class="breadcrumb-item active">Managment</li>
                <li class="breadcrumb-item active">Location</li>
            </ol>
            <div class="card ">
                <div class="card-header" style="font-weight:bold;color:darkblue;">
                    Edit
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col">
                            <form method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="Location.LocationID" />
                                <div class="form-group row">
                                    <label asp-for="Location.LocationName" class="col-sm-3 col-form-label"></label>
                                    <div class="col-sm-8">
                                        <input asp-for="Location.LocationName" class="form-control" />
                                        <span asp-validation-for="Location.LocationName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label asp-for="Location.Status" class="col-sm-3 col-form-label"></label>
                                    <div class="col-sm-8">
                                        <input asp-for="Location.Status" class="form-control" value="Using" readonly />
                                        <span asp-validation-for="Location.Status" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label asp-for="Location.Note" class="col-sm-3 col-form-label"></label>
                                    <div class="col-sm-8">
                                        <textarea rows="4" cols="15" asp-for="Location.Note" class="form-control"></textarea>
                                        <span asp-validation-for="Location.Note" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row" style="float:right; margin-right:9%">
                                    <a asp-page="./Index"><button type="button" class="btn btn-link">Back to List</button></a>
                                    <input style="margin-left:10px" type="submit" value="Save" class="btn btn-outline-dark" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
