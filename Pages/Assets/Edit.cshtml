@page
@model tbkk_AC.Pages.Assets.EditModel

@{
    ViewData["Title"] = "Edit";
}

<div id="content-wrapper">
    <div class="container-fluid">
        <!-- Breadcrumbs-->
        <ol class="breadcrumb">
            <li class="breadcrumb-item active">Asset Control</li>
            <li class="breadcrumb-item active">Managment</li>
            <li class="breadcrumb-item active">Asset</li>
        </ol>
        <form method="post">
            <div class="card " style="margin-top:1%">
                <div class="card-header" style="font-weight:bold;color:darkblue;">
                    Edit
                </div>
                <div class="card-body">
                    <div class="row">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Asset.AssetID" />
                        <div class="col">
                            <div class="form-group row">
                                <div class="col-sm-12">
                                    <label asp-for="Asset.AssetName" class="col-sm-0 col-form-label"></label>
                                    <input asp-for="Asset.AssetName" class="form-control" placeholder="AssetName" />
                                    <span asp-validation-for="Asset.AssetName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-12">
                                    <label asp-for="Asset.MACAddr" class="col-sm-0 col-form-label"></label>
                                    <input asp-for="Asset.MACAddr" class="form-control" placeholder="MACAddr" />
                                    <span asp-validation-for="Asset.MACAddr" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-12">
                                    <label asp-for="Asset.Price" class="col-sm-0 col-form-label"></label>
                                    <input asp-for="Asset.Price" class="form-control" placeholder="Price" />
                                    <span asp-validation-for="Asset.Price" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-12">
                                    <label asp-for="Asset.Type" class="col-sm-0 col-form-label"></label>
                                    <input asp-for="Asset.Type" class="form-control" placeholder="Type" />
                                    <span asp-validation-for="Asset.Type" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group row">
                                <div class="col-sm-12">
                                    <label asp-for="Asset.SerailNumber" class="col-sm-0 col-form-label"></label>
                                    <input asp-for="Asset.SerailNumber" class="form-control" placeholder="SerailNumber" />
                                    <span asp-validation-for="Asset.SerailNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-12">
                                    <label asp-for="Asset.PONumber" class="col-sm-0 col-form-label"></label>
                                    <input asp-for="Asset.PONumber" class="form-control" placeholder="PONumber" />
                                    <span asp-validation-for="Asset.PONumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-12">
                                    <label asp-for="Asset.Warranty" class="col-sm-0 col-form-label"></label>
                                    <input asp-for="Asset.Warranty" class="form-control" placeholder="Warranty" />
                                    <span asp-validation-for="Asset.Warranty" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

            </div>
            <div class="card " style="margin-top:1%">
                <div class="card-header" style="font-weight:bold;color:darkblue;">
                    Model
                </div>
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col">
                            <div class="form-group row">
                                <div class="col-sm-12">
                                    <label asp-for="Asset.Supplier_SupplierID" class="col-sm-0 col-form-label">Supplier</label>
                                    <select asp-for="Asset.Supplier_SupplierID" class="form-control">
                                        <option selected value=@null>Plase select</option>
                                        @foreach (var item in Model.Supplier)
                                        {
                                            if (item.Status.Equals("Using"))
                                            {
                                                <option value=@item.SupplierID>@Html.DisplayFor(modelItem => item.SupplierName)</option>
                                            }
                                        }
                                    </select>
                                    <span asp-validation-for="Asset.Supplier_SupplierID" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">

                                <div class="col-sm-12">
                                    <label asp-for="Asset.Company_CompanyID" class="col-sm-0 col-form-label">Company</label>
                                    <select asp-for="Asset.Company_CompanyID" class="form-control">
                                        <option selected value=@null>Plase select</option>
                                        @foreach (var item in Model.Company)
                                        {
                                            if (item.Status.Equals("Using"))
                                            {
                                                <option value=@item.CompanyID>@Html.DisplayFor(modelItem => item.CompanyName)</option>
                                            }
                                        }
                                    </select>
                                    <span asp-validation-for="Asset.Company_CompanyID" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">

                                <div class="col-sm-12">
                                    <label asp-for="Asset.Location_LocationID" class="col-sm-0 col-form-label">Company</label>
                                    <select asp-for="Asset.Location_LocationID" class="form-control">
                                        <option selected value=@null>Plase select</option>
                                        @foreach (var item in Model.Location)
                                        {
                                            if (item.Status.Equals("Using"))
                                            {
                                                <option value=@item.LocationID>@Html.DisplayFor(modelItem => item.LocationName)</option>
                                            }
                                        }
                                    </select>
                                    <span asp-validation-for="Asset.Location_LocationID" class="text-danger"></span>
                                </div>
                            </div>

                        </div>

                        <div class="col">
                            <div class="form-group row">
                                <div class="col-sm-12">
                                    <label asp-for="Asset.Model_ModelID" class="col-sm-0 col-form-label">Model</label>
                                    <select asp-for="Asset.Model_ModelID" class="form-control">
                                        <option selected value=@null>Plase select</option>
                                        @foreach (var item in Model.Model)
                                        {
                                            if (item.Status.Equals("Using"))
                                            {
                                                <option value=@item.ModelID>@Html.DisplayFor(modelItem => item.ModelName)</option>
                                            }
                                        }
                                    </select>
                                    <span asp-validation-for="Asset.Model_ModelID" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-12">
                                    <label asp-for="Asset.Department_DepartmentID" class="col-sm-0 col-form-label">Department</label>
                                    <select asp-for="Asset.Department_DepartmentID" class="form-control">
                                        <option selected value=@null>Plase select</option>
                                        @foreach (var item in Model.Department)
                                        {
                                            if (item.Status.Equals("Using"))
                                            {
                                                <option value=@item.DepartmentID>@Html.DisplayFor(modelItem => item.DepartmentName)</option>
                                            }
                                        }
                                    </select>
                                    <span asp-validation-for="Asset.Department_DepartmentID" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>


                </div>

            </div>
            <div class="card " style="margin-top:1%">
                <div class="card-header" style="font-weight:bold;color:darkblue;">
                    Date
                </div>
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col">
                            <div class="form-group row">
                                <div class="col-sm-12">
                                    <label asp-for="Asset.InstallDate" class="col-sm-0 col-form-label"></label>
                                    <input asp-for="Asset.InstallDate" class="form-control" placeholder="Address" />
                                    <span asp-validation-for="Asset.InstallDate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-12">
                                    <label asp-for="Asset.PurchaseDate" class="col-sm-0 col-form-label"></label>
                                    <input asp-for="Asset.PurchaseDate" class="form-control" placeholder="Email" />
                                    <span asp-validation-for="Asset.PurchaseDate" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group row">
                                <div class="col-sm-12">
                                    <label asp-for="Asset.ExpireDate" class="col-sm-0 col-form-label"></label>
                                    <input asp-for="Asset.ExpireDate" class="form-control" placeholder="URL" />
                                    <span asp-validation-for="Asset.ExpireDate" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="card " style="margin-top:1%">
                <div class="card-header" style="font-weight:bold;color:darkblue;">
                    More
                </div>
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col">
                            <div class="form-group row">
                                <div class="col-sm-12">
                                    <label asp-for="Asset.Note" class="col-sm-0 col-form-label"></label>
                                    <textarea rows="4" cols="15" asp-for="Asset.Note" class="form-control"></textarea>
                                    <span asp-validation-for="Asset.Note" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-12">
                                    <label asp-for="Asset.Status" class="col-sm-0 col-form-label"></label>
                                    <input asp-for="Asset.Status" class="form-control" value="Using" readonly />
                                    <span asp-validation-for="Asset.Status" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-12">
                                        <label asp-for="Asset.Image" class="col-sm-0 col-form-label"></label>
                                        <input asp-for="Asset.Image" class="form-control" />
                                        <span asp-validation-for="Asset.Image" class="text-danger"></span>
                                    </div>
                                </div>

                            </div>

                    </div>


                </div>

            </div>

            <div class="form-group row" style="float:right; margin-right:0% ; margin-top:1%">
                <a asp-page="./Index"><button type="button" class="btn btn-link">Back to List</button></a>
                <input style="margin-left:10px" type="submit" value="Save" class="btn btn-outline-secondary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
