@page
@model tbkk_AC.Pages.Assets.DetailsModel

@{
    ViewData["Title"] = "Details";
}
    <div class="container">
        <div class="row">
            <div class="col-md-9" >
                <h2>Asset Detail</h2>
                <div class=" col-md-12 col-lg-12 ">
                    <div class="card " style="margin-top:1%">
                        <div class="card-header" style="font-weight:bold;color:darkblue;">
                            Detail
                        </div>
                        <div class="card-body">
                            <table class="table table-user-information" style="margin-top:-33%">
                                <tbody>
                                    <tr>
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="col">
                                                    <td>@Html.DisplayNameFor(model => model.Asset.AssetName) :</td>
                                                    <td> @Html.DisplayFor(model => model.Asset.AssetName)</td>
                                                </div>
                                                <div class="col">
                                                    <td>@Html.DisplayNameFor(model => model.Asset.SerailNumber) :</td>
                                                    <td>@Html.DisplayFor(model => model.Asset.SerailNumber)</td>
                                                </div>
                                            </div>
                                        </div>
                                    </tr>
                                    <tr>
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="col">
                                                    <td>@Html.DisplayNameFor(model => model.Asset.MACAddr) :</td>
                                                    <td> @Html.DisplayFor(model => model.Asset.MACAddr)</td>
                                                </div>
                                                <div class="col">
                                                    <td>@Html.DisplayNameFor(model => model.Asset.PONumber) :</td>
                                                    <td>@Html.DisplayFor(model => model.Asset.PONumber)</td>

                                                </div>
                                            </div>
                                        </div>
                                    </tr>
                                    <tr>
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="col">
                                                    <td>@Html.DisplayNameFor(model => model.Asset.Status) :</td>
                                                    <td>@Html.DisplayFor(model => model.Asset.Status)</td>
                                                </div>
                                                <div class="col">
                                                    <td>Model :</td>
                                                    <td>
                                                        @foreach (var item in Model.Model)
                                                        {
                                                            if (Model.Asset.Model_ModelID == item.ModelID)
                                                            {
                                                                @Html.DisplayFor(modelItem => item.ModelName)
                                                            }
                                                        }
                                                    </td>
                                                </div>
                                            </div>
                                        </div>
                                    </tr>
                                    <tr>
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="col">
                                                    <td>@Html.DisplayNameFor(model => model.Asset.PONumber) :</td>
                                                    <td>@Html.DisplayFor(model => model.Asset.PONumber)</td>
                                                </div>
                                                <div class="col">
                                                    <td>@Html.DisplayNameFor(model => model.Asset.Price) :</td>
                                                    <td>@Html.DisplayFor(model => model.Asset.Price)</td>
                                                </div>
                                            </div>
                                        </div>
                                    </tr>
                                    <tr>
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="col">
                                                    <td>@Html.DisplayNameFor(model => model.Asset.Warranty) :</td>
                                                    <td>@Html.DisplayFor(model => model.Asset.Warranty)</td>
                                                </div>
                                                <div class="col">
                                                    <td>@Html.DisplayNameFor(model => model.Asset.Type) :</td>
                                                    <td>@Html.DisplayFor(model => model.Asset.Type)</td>
                                                </div>
                                            </div>
                                        </div>
                                    </tr>
                                    <tr>
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="col">
                                                    <td></td>
                                                    <td></td>

                                                </div>
                                                <div class="col">
                                                    <td></td>
                                                    <td></td>
                                                </div>
                                            </div>
                                        </div>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    
                    <div class="card " style="margin-top:-4%">
                        <div class="card-header" style="font-weight:bold;color:darkblue;">
                            Model
                        </div>
                        <div class="card-body">
                            <table class="table table-user-information" style="margin-top:-16%;margin-bottom:2%">
                                <tbody>
                                    <tr>
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="col">
                                                    <td>Supplier :</td>
                                                    <td>
                                                        @foreach (var item in Model.Supplier)
                                                        {
                                                            if (Model.Asset.Supplier_SupplierID == item.SupplierID)
                                                            {
                                                                @Html.DisplayFor(modelItem => item.SupplierName)
                                                            }
                                                        }
                                                    </td>
                                                </div>
                                                <div class="col">
                                                    <td>Company :</td>
                                                    <td>
                                                        @foreach (var item in Model.Company)
                                                        {
                                                            if (Model.Asset.Company_CompanyID == item.CompanyID)
                                                            {
                                                                @Html.DisplayFor(modelItem => item.CompanyName)
                                                            }
                                                        }
                                                    </td>
                                                </div>
                                            </div>
                                        </div>
                                    </tr>
                                    <tr>
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="col">
                                                    <td>Location :</td>
                                                    <td>
                                                        @foreach (var item in Model.Location)
                                                        {
                                                            if (Model.Asset.Location_LocationID == item.LocationID)
                                                            {
                                                                @Html.DisplayFor(modelItem => item.LocationName)
                                                            }
                                                        }
                                                    </td>
                                                </div>
                                                <div class="col">
                                                    <td>Department :</td>
                                                    <td>
                                                        @foreach (var item in Model.Department)
                                                        {
                                                            if (Model.Asset.Department_DepartmentID == item.DepartmentID)
                                                            {
                                                                @Html.DisplayFor(modelItem => item.DepartmentName)
                                                            }
                                                        }
                                                    </td>
                                                </div>
                                            </div>
                                        </div>
                                    </tr>
                                    <tr>
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="col">
                                                    <td></td>
                                                    <td></td>

                                                </div>
                                                <div class="col">
                                                    <td></td>
                                                    <td></td>
                                                </div>
                                            </div>
                                        </div>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <div class="card " style="margin-top:-4%">
                        <div class="card-header" style="font-weight:bold;color:darkblue;">
                            Date
                        </div>
                        <div class="card-body">
                            <table class="table table-user-information" style="margin-top:-16%;margin-bottom:-3%">
                                <tbody>
                                    <tr>
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="col">
                                                    <td>@Html.DisplayNameFor(model => model.Asset.InstallDate) :</td>
