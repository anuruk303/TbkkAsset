                                                <div class="col">
                                                    <td></td>
                                                    <td></td>

                                                </div>
                                                <div class="col">
                                                    <td></td>
                                                    <td></td>
                                                </div>
                                            </div>
                                        </div>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <h2></h2>
                <div class="col-md-3 col-lg-3 " align="center">
                    <img src="~/uploads/@Html.DisplayFor(model => model.Asset.Image)" width="200px" height="220px" />

                </div>

            </div>
        </div>

        <div>
            <a asp-page="./Edit" asp-route-id="@Model.Asset.AssetID">Edit</a> |
