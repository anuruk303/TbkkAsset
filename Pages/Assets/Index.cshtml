                                        <label asp-for="AssetCreate.Company_CompanyID" class="col-sm-0 col-form-label">Company</label>
                                        <select asp-for="AssetCreate.Company_CompanyID" class="form-control">
                                            <option selected value=@null>Plase select</option>
                                            @foreach (var item in Model.Company)
                                            {
                                                if (item.Status.Equals("Using"))
                                                {
                                                    <option value=@item.CompanyID>@Html.DisplayFor(modelItem => item.CompanyName)</option>
                                                }
                                            }
                                        </select>
                                        <span asp-validation-for="AssetCreate.Company_CompanyID" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row">

                                    <div class="col-sm-12">
                                        <label asp-for="AssetCreate.Location_LocationID" class="col-sm-0 col-form-label">Company</label>
                                        <select asp-for="AssetCreate.Location_LocationID" class="form-control">
                                            <option selected value=@null>Plase select</option>
                                            @foreach (var item in Model.Location)
                                            {
