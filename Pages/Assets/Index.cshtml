            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <input style="margin-left:10px" type="submit" asp-page-handler="Create" onclick="run1" value="Create" class="btn btn-outline-secondary" />
                </div>
            </div>
        </div>
    </div>
</form>
<script>
    function run1() {
        document.getElementById("pho2").value = document.getElementById("pho1").value
    }
    function run() {
        document.getElementById("ff").innerHTML = document.getElementById("fUpload").value
    } function clear1() {
        
        document.getElementById("Supplier").selectedIndex = "0";
        document.getElementById("PONumber").value = "";
        document.getElementById("Company").selectedIndex = "0";
        document.getElementById("Status").selectedIndex = "0";
        document.getElementById("Department").selectedIndex = "0";
        document.getElementById("Location").selectedIndex = "0";
        document.getElementById("Category").selectedIndex = "0";
    }
</script>
