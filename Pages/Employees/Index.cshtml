@page
@model tbkk_AC.Pages.Employees.IndexModel

@{
    ViewData["Title"] = "Index";
}

    <div id="content-wrapper">
        <div class="container-fluid">
            <!-- Breadcrumbs-->
            <ol class="breadcrumb">
                <li class="breadcrumb-item active">Asset Control</li>
                <li class="breadcrumb-item active">Managment</li>
                <li class="breadcrumb-item active">Employee</li>
            </ol>
            <!-- DataTables Example -->
            <div class="card mb-3">
                <div class="card-header">
                    <div class="dataTable_length">
                        <i class="fas fa-table">Employee</i>
                        <div style="float: right">
                            <a asp-page="Create">
                                <button type="button" class="btn btn-primary brands-modal">

                                    Create
                                </button>
                            </a>
                            <!--<a class="btn btn-info" asp-page="Create">Create New</a>-->
                            <button type="button" class="btn btn-info">Import data</button>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Employee[0].FirstName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Employee[0].LastName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Employee[0].Gender)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Employee[0].Status)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Employee[0].Company)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Employee[0].Department)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Employee[0].EmployeeType)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Employee[0].Position)
                                    </th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Employee)
                                {
                                    if (item.Status.Equals("Using")) { 
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FirstName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LastName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Gender)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Status)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Company.CompanyName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Department.DepartmentName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.EmployeeType.EmployeeTypeID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Position.PositionID)
                                    </td>
                                    <td width="100px">
                                        <a asp-page="./Edit" asp-route-id="@item.EmployeeID">Edit</a> |
                                        <a asp-page="./Detail" asp-route-id="@item.EmployeeID">Delete</a>
                                        <a asp-page="./Delete" asp-route-id="@item.EmployeeID">Delete</a>
                                    </td>
                                </tr>
                                }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>