@page
@model tbkk_AC.Pages.Employees.EditModel

@{
    ViewData["Title"] = "Edit";
}
<div id="content-wrapper">
    <div class="container-fluid">
        <!-- Breadcrumbs-->
        <ol class="breadcrumb">
            <li class="breadcrumb-item active">Asset Control</li>
            <li class="breadcrumb-item active">Managment</li>
            <li class="breadcrumb-item active">Category</li>
        </ol>
        <div class="card ">
            <div class="card-header">
                Create
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col">
                        <form method="post" enctype="multipart/form-data">

                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="Employee.EmployeeID" />
                            <div class="form-group row">
                                <label asp-for="Employee.FirstName" class="col-sm-3 col-form-label"></label>
                                <div class="col-sm-8">
                                    <input asp-for="Employee.FirstName" class="form-control" />
                                    <span asp-validation-for="Employee.FirstName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Employee.LastName" class="col-sm-3 col-form-label"></label>
                                <div class="col-sm-8">
                                    <input asp-for="Employee.LastName" class="form-control" />
                                    <span asp-validation-for="Employee.LastName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Employee.Gender" class="col-sm-3 col-form-label"></label>
                                <div class="col-sm-8">
                                    <input asp-for="Employee.Gender" class="form-control" />
                                    <span asp-validation-for="Employee.Gender" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Employee.Email" class="col-sm-3 col-form-label"></label>
                                <div class="col-sm-8">
                                    <input asp-for="Employee.Email" class="form-control" />
                                    <span asp-validation-for="Employee.Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Employee.Call" class="col-sm-3 col-form-label"></label>
                                <div class="col-sm-8">
                                    <input asp-for="Employee.Call" class="form-control" />
                                    <span asp-validation-for="Employee.Call" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Employee.Line" class="col-sm-3 col-form-label"></label>
                                <div class="col-sm-8">
                                    <input asp-for="Employee.Line" class="form-control" />
                                    <span asp-validation-for="Employee.Line" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Employee.Addr" class="col-sm-3 col-form-label"></label>
                                <div class="col-sm-8">
                                    <input asp-for="Employee.Addr" class="form-control" />
                                    <span asp-validation-for="Employee.Addr" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Employee.Date" class="col-sm-3 col-form-label"></label>
                                <div class="col-sm-8">
                                    <input asp-for="Employee.Date" class="form-control" />
                                    <span asp-validation-for="Employee.Date" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label asp-for="Employee.Status" class="col-sm-3 col-form-label"></label>
                                <div class="col-sm-8">
                                    <input asp-for="Employee.Status" class="form-control" value="Using" readonly />
                                    <span asp-validation-for="Employee.Status" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Employee.Company_CompanyID" class="col-sm-3 col-form-label">Company</label>
                                <div class="col-sm-8">
                                    <select asp-for="Employee.Company_CompanyID" class="form-control">
                                        <option selected value=@null>Plase select</option>
                                        @foreach (var item in Model.Company)
                                        {
                                            if (item.Status.Equals("Using"))
                                            {
                                                <option value=@item.CompanyID>@Html.DisplayFor(modelItem => item.CompanyName)</option>
                                            }
                                        }
                                    </select>
                                    <span asp-validation-for="Employee.Company_CompanyID" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label asp-for="Employee.Department_DepartmentID" class="col-sm-3 col-form-label">Department</label>
                                <div class="col-sm-8">
                                    <select asp-for="Employee.Department_DepartmentID" class="form-control">
                                        <option selected value=@null>Plase select</option>
                                        @foreach (var item in Model.Department)
                                        {
                                            if (item.Status.Equals("Using"))
                                            {
                                                <option value=@item.DepartmentID>@Html.DisplayFor(modelItem => item.DepartmentName)</option>
                                            }
                                        }
                                    </select>
                                    <span asp-validation-for="Employee.Department_DepartmentID" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Employee.Location_LocationID" class="col-sm-3 col-form-label">Company</label>
                                <div class="col-sm-8">
                                    <select asp-for="Employee.Location_LocationID" class="form-control">
                                        <option selected value=@null>Plase select</option>
                                        @foreach (var item in Model.Location)
                                        {
                                            if (item.Status.Equals("Using"))
                                            {
                                                <option value=@item.LocationID>@Html.DisplayFor(modelItem => item.LocationName)</option>
                                            }
                                        }
                                    </select>
                                    <span asp-validation-for="Employee.Location_LocationID" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Employee.EmployeeType_EmployeeTypeID" class="col-sm-3 col-form-label">EmployeeType</label>
                                <div class="col-sm-8">
                                    <select asp-for="Employee.EmployeeType_EmployeeTypeID" class="form-control">
                                        <option selected value=@null>Plase select</option>
                                        @foreach (var item in Model.EmployeeType)
                                        {
                                            if (item.Status.Equals("Using"))
                                            {
                                                <option value=@item.EmployeeTypeID>@Html.DisplayFor(modelItem => item.EmployeeTypeName)</option>
                                            }
                                        }
                                    </select>
                                    <span asp-validation-for="Employee.Position_PositionID" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Employee.Position_PositionID" class="col-sm-3 col-form-label">Position</label>
                                <div class="col-sm-8">
                                    <select asp-for="Employee.Position_PositionID" class="form-control">
                                        <option selected value=@null>Plase select</option>
                                        @foreach (var item in Model.Position)
                                        {
                                            if (item.Status.Equals("Using"))
                                            {
                                                <option value=@item.PositionID>@Html.DisplayFor(modelItem => item.PositionName)</option>
                                            }
                                        }
                                    </select>
                                    <span asp-validation-for="Employee.Position_PositionID" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <input type="file" name="photo" id="pho1" asp-for="Employee.Image" accept="image/jpeg,image/jpg" />
                                <input asp-for="Employee.Image" class="form-control" hidden id="pho2" />
                                <span asp-validation-for="Employee.Image" class="text-danger"></span>
                            </div>
                            <div class="form-group row" style="float:right; margin-right:9%">
                                <a asp-page="./Index"><button type="button" class="btn btn-link">Back to List</button></a>
                                <input style="margin-left:10px" type="submit" value="Save" class="btn btn-outline-dark" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
