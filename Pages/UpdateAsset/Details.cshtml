@page
@model tbkk_AC.Pages.UdateAsset.DetailsModel

@{
    ViewData["Title"] = "Details";
}
<div class="container">
    <div class="row">
        <div class="col-md-9">
            <h2>Asset Detail</h2>
            <div class=" col-md-12 col-lg-12 ">
                <div class="card " style="margin-top:1%">
                    <div class="card-header" style="font-weight:bold;color:darkblue;">
                        Detail
                    </div>
                    <div class="card-body">
                        <table class="table table-user-information" style="margin-top:-33%">
                            <tbody>
                                <tr>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col">
                                                <td>@Html.DisplayNameFor(model => model.Update_Asset.UpdateAssetName) :</td>
                                                <td> @Html.DisplayFor(model => model.Update_Asset.UpdateAssetName)</td>
                                            </div>
                                            <div class="col">
                                                <td>@Html.DisplayNameFor(model => model.Update_Asset.UpdateSerailNumber) :</td>
                                                <td>@Html.DisplayFor(model => model.Update_Asset.UpdateSerailNumber)</td>
                                            </div>
                                        </div>
                                    </div>
                                </tr>
                                <tr>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col">
                                                <td>@Html.DisplayNameFor(model => model.Update_Asset.UpdateMACAddr) :</td>
                                                <td> @Html.DisplayFor(model => model.Update_Asset.UpdateMACAddr)</td>
                                            </div>
                                            <div class="col">
                                                <td>@Html.DisplayNameFor(model => model.Update_Asset.UpdatePONumber) :</td>
                                                <td>@Html.DisplayFor(model => model.Update_Asset.UpdatePONumber)</td>

                                            </div>
                                        </div>
                                    </div>
                                </tr>
                                <tr>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col">
                                                <td>@Html.DisplayNameFor(model => model.Update_Asset.UpdateStatus) :</td>
                                                <td>@Html.DisplayFor(model => model.Update_Asset.UpdateStatus)</td>
                                            </div>
                                            <div class="col">
                                                <td>Model :</td>
                                                <td>
                                                    @foreach (var item in Model.Model)
                                                    {
                                                        if (Model.Update_Asset.Model_ModelID == item.ModelID)
                                                        {
                                                            @Html.DisplayFor(modelItem => item.ModelName)
                                                        }
                                                    }
                                                </td>
                                            </div>
                                        </div>
                                    </div>
                                </tr>
                                <tr>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col">
                                                <td>@Html.DisplayNameFor(model => model.Update_Asset.UpdatePONumber) :</td>
                                                <td>@Html.DisplayFor(model => model.Update_Asset.UpdatePONumber)</td>
                                            </div>
                                            <div class="col">
                                                <td>@Html.DisplayNameFor(model => model.Update_Asset.UpdatePrice) :</td>
                                                <td>@Html.DisplayFor(model => model.Update_Asset.UpdatePrice)</td>
                                            </div>
                                        </div>
                                    </div>
                                </tr>
                                <tr>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col">
                                                <td>@Html.DisplayNameFor(model => model.Update_Asset.UpdateWarranty) :</td>
                                                <td>@Html.DisplayFor(model => model.Update_Asset.UpdateWarranty)</td>
                                            </div>
                                            <div class="col">
                                                <td>@Html.DisplayNameFor(model => model.Update_Asset.UpdateType) :</td>
                                                <td>@Html.DisplayFor(model => model.Update_Asset.UpdateType)</td>
                                            </div>
                                        </div>
                                    </div>
                                </tr>
                                <tr>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col">
                                                <td></td>
                                                <td></td>

                                            </div>
                                            <div class="col">
                                                <td></td>
                                                <td></td>
                                            </div>
                                        </div>
                                    </div>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="card " style="margin-top:-4%">
                    <div class="card-header" style="font-weight:bold;color:darkblue;">
                        Model
                    </div>
                    <div class="card-body">
                        <table class="table table-user-information" style="margin-top:-16%;margin-bottom:2%">
                            <tbody>
                                <tr>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col">
                                                <td>Supplier :</td>
                                                <td>
                                                    @foreach (var item in Model.Supplier)
                                                    {
                                                        if (Model.Update_Asset.Supplier_SupplierID == item.SupplierID)
                                                        {
                                                            @Html.DisplayFor(modelItem => item.SupplierName)
                                                        }
                                                    }
                                                </td>
                                            </div>
                                            <div class="col">
                                                <td>Company :</td>
                                                <td>
                                                    @foreach (var item in Model.Company)
                                                    {
                                                        if (Model.Update_Asset.Company_CompanyID == item.CompanyID)
                                                        {
                                                            @Html.DisplayFor(modelItem => item.CompanyName)
                                                        }
                                                    }
                                                </td>
                                            </div>
                                        </div>
                                    </div>
                                </tr>
                                <tr>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col">
                                                <td>Location :</td>
                                                <td>
                                                    @foreach (var item in Model.Location)
                                                    {
                                                        if (Model.Update_Asset.Location_LocationID == item.LocationID)
                                                        {
                                                            @Html.DisplayFor(modelItem => item.LocationName)
                                                        }
                                                    }
                                                </td>
                                            </div>
                                            <div class="col">
                                                <td>Department :</td>
                                                <td>
                                                    @foreach (var item in Model.Department)
                                                    {
                                                        if (Model.Update_Asset.Department_DepartmentID == item.DepartmentID)
                                                        {
                                                            @Html.DisplayFor(modelItem => item.DepartmentName)
                                                        }
                                                    }
                                                </td>
                                            </div>
                                        </div>
                                    </div>
                                </tr>
                                <tr>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col">
                                                <td></td>
                                                <td></td>

                                            </div>
                                            <div class="col">
                                                <td></td>
                                                <td></td>
                                            </div>
                                        </div>
                                    </div>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="card " style="margin-top:-4%">
                    <div class="card-header" style="font-weight:bold;color:darkblue;">
                        Date
                    </div>
                    <div class="card-body">
                        <table class="table table-user-information" style="margin-top:-16%;margin-bottom:-3%">
                            <tbody>
                                <tr>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col">
                                                <td>
                                                @Html.DisplayNameFor(model => model.Update_Asset.UpdateInstallDate) :</td>
                                                <td>@Html.DisplayFor(model => model.Update_Asset.UpdateInstallDate)</td>

                                            </div>
                                            <div class="col">
                                                <td>@Html.DisplayNameFor(model => model.Update_Asset.UpdatePurchaseDate) :</td>
                                                <td>@Html.DisplayFor(model => model.Update_Asset.UpdatePurchaseDate)</td>

                                            </div>
                                        </div>
                                    </div>
                                </tr>
                                <tr>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col">
                                                <td>@Html.DisplayNameFor(model => model.Update_Asset.UpdateExpireDate) :</td>
                                                <td>@Html.DisplayFor(model => model.Update_Asset.UpdateExpireDate)</td>

                                            </div>
                                            <div class="col">
                                                <td></td>
                                                <td></td>
                                            </div>
                                        </div>
                                    </div>
                                </tr>
                                <tr>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col">
                                                <td></td>
                                                <td></td>

                                            </div>
                                            <div class="col">
                                                <td></td>
                                                <td></td>
                                            </div>
                                        </div>
                                    </div>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card " style="margin-top:0%">
                    <div class="card-header" style="font-weight:bold;color:darkblue;">
                        Update
                    </div>
                    <div class="card-body">
                        <table class="table table-user-information" style="margin-top:-10%;margin-bottom:-3%">
                            <tbody>
                                <tr>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col">
                                                <td>Employee :</td>
                                                <td>
                                                    @foreach (var item in Model.Employee)
                                                    {
                                                        if (Model.Update_Asset.Employee_EmpID == item.EmployeeID)
                                                        {
                                                            @Html.DisplayFor(modelItem => item.FirstName)
                                                        }
                                                    }
                                                </td>
                                            </div>
                                            <div class="col">
                                                <td>@Html.DisplayNameFor(model => model.Update_Asset.UpdateDate) :</td>
                                                <td>@Html.DisplayFor(model => model.Update_Asset.UpdateDate)</td>

                                            </div>
                                        </div>
                                    </div>
                                </tr>
                                <tr>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col">
                                                <td></td>
                                                <td></td>

                                            </div>
                                            <div class="col">
                                                <td></td>
                                                <td></td>
                                            </div>
                                        </div>
                                    </div>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <h2></h2>
            <div class="col-md-3 col-lg-3 " align="center">
                <img src="~/uploads/@Html.DisplayFor(model => model.Update_Asset.UpdateImage)" width="200px" height="220px" />

            </div>

        </div>
    </div>

    <div>
        <a asp-page="../Assets/Details" asp-route-id="@Model.Update_Asset.Asset_AssetID">Back to List</a>
    </div>
    
   
</div>
