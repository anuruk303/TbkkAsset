@page
@model tbkk_AC.Pages.Categories.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" >
                <label asp-for="Category.CategoryName" class="control-label"></label>
                <input asp-for="Category.CategoryName" class="form-control" />
                <span asp-validation-for="Category.CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="file" name="photo" id="pho1" asp-for="Category.Image" accept="image/jpeg,image/jpg" />
                <input asp-for="Category.Image" class="form-control" hidden id="pho2" />
                <span asp-validation-for="Category.Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category.TypeName" class="control-label"></label>
                <input asp-for="Category.TypeName" class="form-control" />
                <span asp-validation-for="Category.TypeName" class="text-danger"></span>
            </div>
            <input asp-for="Category.Status" value="Using" type="hidden" />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" onclick="run()" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>
<script>
    function run() {
        document.getElementById("pho2").value = document.getElementById("pho1").value
    }

</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
