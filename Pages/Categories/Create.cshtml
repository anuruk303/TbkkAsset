@page
@model tbkk_AC.Pages.Categories.CreateModel

@{
    ViewData["Title"] = "Create";
}
<div id="content-wrapper">
    <div class="container-fluid">
        <!-- Breadcrumbs-->
        <ol class="breadcrumb">
            <li class="breadcrumb-item active">Asset Control</li>
            <li class="breadcrumb-item active">Managment</li>
            <li class="breadcrumb-item active">Category</li>
        </ol>
        <div class="card ">
            <div class="card-header">
                Create
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col">
                        <form method="post" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group row">
                                <label asp-for="Category.CategoryName" class="col-sm-3 col-form-label"></label>
                                <div class="col-sm-8">
                                    <input asp-for="Category.CategoryName" class="form-control" placeholder="CategoryName"/>
                                    <span asp-validation-for="Category.CategoryName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Category.TypeName" class="col-sm-3 col-form-label"></label>
                                <div class="col-sm-8">
                                    <input asp-for="Category.TypeName" class="form-control" placeholder="TypeName"/>
                                    <span asp-validation-for="Category.TypeName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Category.Status" class="col-sm-3 col-form-label"></label>
                                <div class="col-sm-8">
                                    <input asp-for="Category.Status" class="form-control" value="Using" readonly />
                                    <span asp-validation-for="Category.Status" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <input type="file" name="photo" id="pho1" asp-for="Category.Image" accept="image/jpeg,image/jpg" />
                                <input asp-for="Category.Image" class="form-control" hidden id="pho2" />
                                <span asp-validation-for="Category.Image" class="text-danger"></span>
                            </div>
                            <div class="form-group row" style="float:right; margin-right:9%">
                                <a asp-page="./Index"><button type="button" class="btn btn-link">Back to List</button></a>
                                <input style="margin-left:10px" type="submit" value="Create" class="btn btn-outline-dark" onclick="run()" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function run() {
        document.getElementById("pho2").value = document.getElementById("pho1").value
    }

</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
